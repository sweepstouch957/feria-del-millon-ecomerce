{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["app/components/*"],
      "@store/*": ["src/store/*"], // ðŸ‘ˆ agrega esta lÃ­nea.
      "@data/*": ["src/data/*"], // ðŸ‘ˆ agrega esta lÃ­nea.
      "@lib/*": ["src/lib/*"],
      "@services/*": ["src/services/*"],
      "@core/*": ["src/core/*"],
      "@provider/*": ["src/provider/*"],
      "@hooks/*": ["src/hooks/*"],
    },
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["**/*.ts", "**/*.tsx", "next-env.d.ts", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
